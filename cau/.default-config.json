{
	"temp_path":			"./.tmp",
	"deploy_path_dev":		"./deploy",
	"deploy_path_dist":		"{{deploy_path_dev}}",

	"source":{
		"path":				"./source",
		"scss":{
			"src":			"{{source.path}}/scss",
			"dest":			"{{temp_path}}/css",
			"smacss":		true
		},
		"js":{
			"src":			"{{source.path}}/js",
			"files":		[],
			"inject_to":	[ "*.html", "*.php" ],
			"cocat_to":		"scripts.js",
			"dest":			"{{temp_path}}/js"
		}
	},

	"notifier":{
		"success":{
			"title":		"Chr1Sp1n-Dev Assets Uility",
			"message": 		"Task execution complete",
			"onLast": 		true,
			"icon": 		"./assets-utility/cau/notifier/checked.png"
		},
		"error":{
			"title":		"Chr1Sp1n-Dev Assets Uility",
			"message": 		"Error: ",
			"onLast": 		false,
			"icon": 		"./assets-utility/cau/notifier/virus.png"
		},
		"message":{
			"title":		"Chr1Sp1n-Dev Assets Uility",
			"message": 		"Message: ",
			"onLast": 		false,
			"icon": 		"./assets-utility/cau/notifier/info.png"
		}
	},
	"stop_on_error":	false,

	"db":{
		"host": "localhost",
		"database": "mydatabase",
		"user": "username",
		"password": "password",
		"dest": "./db-dump"
	},

	"site":{
		"type":"pure-html",
		"hosts":{
			"dev": "http://localhost/mysite",
			"dist": "http://www.mysite.com"
		}
	}
}



